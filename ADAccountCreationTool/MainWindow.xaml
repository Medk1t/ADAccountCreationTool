<Window x:Class="ADAccountCreationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Создание учетной записи" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" VerticalAlignment="Top">
            <TextBox x:Name="FirstNameBox" PlaceholderText="Имя"/>
            <TextBox x:Name="MiddleNameBox" PlaceholderText="Отчество"/>
            <TextBox x:Name="LastNameBox" PlaceholderText="Фамилия"/>
            <TextBox x:Name="DepartmentBox" PlaceholderText="Номер отдела"/>
            <ComboBox x:Name="OuComboBox" />
            <ComboBox x:Name="GroupComboBox" />
            <TextBox x:Name="ScriptPathBox" PlaceholderText="Путь сценария входа"/>
            <TextBlock x:Name="LoginPreview" FontWeight="Bold" />
            <Button Content="Создать" Click="Create_Click"/>
        </StackPanel>
    </Grid>
</Window>